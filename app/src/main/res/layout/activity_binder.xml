<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".binder.BinderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/btn_bind_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BindService"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/btn_find_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="获取成绩"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/btn_bind_service2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BindService2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btn_find_grade2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="获取成绩2"
            android:textSize="20sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="输入name"
        android:padding="20dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/btn_bind_service3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BindService3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btn_animal_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="AddAnimal"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btn_animal_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="PrintAnimal"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>